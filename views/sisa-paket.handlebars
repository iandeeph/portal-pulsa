    <div class="mt-30 home-table row">
        <div class="col s12 freeze">
            <table class="bordered auto-scroll freeze">
                <thead>
                <tr class="border-bottom">
                    <th class="border-right headcol th-height" rowspan="3">
                        <div class="th-text">
                            Provider
                        </div>
                    </th>
                    <th class="border-right" colspan="{{totalTanggal}}">
                        Paket / Tanggal & Jam
                    </th>
                </tr>
                <tr class="border-bottom">
                    <th class="border-right">
                    </th>
                    {{#each tanggal}}
                        <th id="tanggal{{this}}" class="border-right" colspan="4">
                            {{this}}
                        </th>
                    {{/each}}
                </tr>
                <tr class="border-bottom">
                    <th class="border-right">
                    </th>
                    {{#each tanggal}}
                        <th class="border-right">
                            05:00
                        </th>
                        <th class="border-right">
                            07:00
                        </th>
                        <th class="border-right">
                            12:00
                        </th>
                        <th class="border-right">
                            16:00
                        </th>
                    {{/each}}
                </tr>
                </thead>
                <tbody>
                {{#each layoutTemplate}}
                    <tr>
                        <td class="headcol" colspan="2">
                            {{@key}}
                        </td>
                        {{#each this}}
                            {{#each this}}
                                {{#compare this.paket 400 operator="<="}}
                                    <td class="fixed red-text" title="{{this.ussd}}">
                                        {{this.paket}}
                                    </td>
                                {{else}}
                                    <td class="fixed" title="{{this.ussd}}">
                                        {{this.paket}}
                                    </td>
                                {{/compare}}
                            {{/each}}
                        {{/each}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

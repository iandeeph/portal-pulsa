{{#section 'title'}}
    Pending - Portal Pulsa Cermati
{{/section}}
{{error}}
<div class="container">
    <div class="col s12">
        <span class="font-40">Pesan Pending</span>
    </div>
    <div class="col s12 mt-30 mb-20 home-table hide-on-med-and-down">
        <table class="bordered">
            <thead>
                <tr>
                    <th width="20%" data-field="time">Tanggal</th>
                    <th width="10%" data-field="sender">Penerima</th>
                    <th width="60%" data-field="message">Pesan</th>
                    <th width="10%" data-field="message">Pengirim</th>
                </tr>
            </thead>
            <tbody>
            {{#each pendings}}
                <tr>
                    <td class="break-word">
                        {{date}}
                    </td>
                    <td>
                        {{number}}
                    </td>
                    <td class="break-word">
                        {{joinTextOutbox outboxTextDecoded outboxMultiTextDecoded}}
                    </td>
                    <td>
                        {{CreatorID}}
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td class="break-word">
                        -
                    </td>
                    <td>
                        -
                    </td>
                    <td class="break-word">
                        -
                    </td>
                    <td>
                        -
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col s12 hide-on-large-only">
        <ul class="collection">
            {{#each pendings}}
                <li class="collection-item">
                    <div class="col s12">
                        <div class="col s12 mb-20 font-normal">
                            <div class="collection-content">
                                <div class="col s12">
                                    <span>{{date}}</span><br>
                                    <span>{{number}}</span><br>
                                </div>
                                <div class="col s12">
                                    <div class="divider"></div>
                                    <p>
                                        {{joinTextOutbox outboxTextDecoded outboxMultiTextDecoded}}
                                    </p>
                                </div>
                                <div class="col s12">
                                    <div class="divider"></div>
                                    <span>Pengirim: {{CreatorID}}</span> <br>
                                    <span>Status : </span><span class="green-text">{{status}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {{else}}
                <li class="collection-item">
                    <div class="col s12">
                        <div class="col s12 mb-20 font-normal">
                            <div class="collection-content">
                                <div class="col s12">
                                    <div class="divider"></div>
                                    <p>
                                        Tidak ada pesan pending
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>

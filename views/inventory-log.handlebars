{{#section 'title'}}
    Log Aktivitas - Portal Inventori Cermati
{{/section}}
{{error}}
<div class="container">
    <div class="col s12">
        <span class="font-40">Log Aktivitas</span>
    </div>
    <div class="col s12 mt-30 mb-20 home-table">
        <table id="myTable" class="bordered">
            <thead>
            <tr>
                <th width="20%">Tangal</th>
                <th width="10%">User</th>
                <th width="30%">Action</th>
                <th width="40%">Action Detail</th>
            </tr>
            </thead>
            <tbody>
                {{#each rowLog}}
                    <tr>
                        <td>
                            {{tanggal}}
                        </td>
                        <td>
                            {{user}}
                        </td>
                        <td>
                            {{action}}
                        </td>
                        <td>
                            {{{nl2br value}}}
                        </td>
                    </tr>
                {{/each}}
            <tbody>
        </table>
    </div>
</div>